{% extends 'base.html.twig' %}

{% block title %}Bulletin d'Examens{% endblock %}

{% block body %}
	<!-- Content Header (Page header) -->
	<section class="content-header">
		<div class="container-fluid">
			<div class="row mb-2">
				<div class="col-sm-6">
					<h1>Bulletin d'Examens</h1>
				</div>
				<div class="col-sm-6">
					<ol class="breadcrumb float-sm-right">
						<li class="breadcrumb-item">
							<a href="{{ path('app_oc_dashboard') }}">Accueil</a>
						</li>
						<li class="breadcrumb-item active">Bulletin d'Examens</li>
					</ol>
				</div>
			</div>
		</div>
		<!-- /.container-fluid -->
	</section>

	<!-- Main content -->
	<section class="content">
		<div class="container-fluid">
			<div class="row">
				<div class="col-12">
					<div class="card card-primary">
						<div class="card-header">
							<h3 class="card-title">Liste des Bulletins d'Examens</h3>
						</div>
						<!-- /.card-header -->
						<div class="card-body">
							<a class="btn btn-primary float-right" href="{{ path('app_bulletin_examens_new') }}">
								<i class="fas fa-plus"></i>
								Ajouter
							</a>
							<table id="example1" class="table table-bordered table-striped">
								<thead>
									<tr>
										<th>Références</th>
										<th>Date de prescrition</th>
										<th>Observations</th>
										<th>Actions</th>
									</tr>
								</thead>
								<tbody>
									{% for bulletin_examen in bulletin_examens %}
										<tr>
											<td>{{ bulletin_examen.refBulletinExamen }}</td>
											<td>{{ bulletin_examen.datePrescription ? bulletin_examen.datePrescription|date('d-m-Y') : '' }}</td>
											<td>{{ bulletin_examen.observation }}</td>
											<td>
												<a class="btn btn-app bg-success" href="{{ path('app_bulletin_examens_show', {'id': bulletin_examen.id}) }}">
													<a class="btn btn-app bg-success">
														<i class="fas fa-view"></i>Show
													</a>
												</a>
												<a class="btn btn-app" href="{{ path('app_bulletin_examens_edit', {'id': bulletin_examen.id}) }}">
													<i class="fas fa-edit"></i>Edit
												</a>
											</td>
										</tr>
									{% else %}
										<tr>
											<td colspan="4">Aucun éléments trouvés</td>
										</tr>
									{% endfor %}
								</tbody>
								<tfoot>
									<tr>
										<th>Références</th>
										<th>Date de prescrition</th>
										<th>Observations</th>
										<th>Actions</th>
									</tr>
								</tfoot>
							</table>
						</div>
						<!-- /.card-body -->
					</div>
					<!-- /.card -->
				</div>
				<!-- /.col -->
			</div>
			<!-- /.row -->
		</div>
		<!-- /.container-fluid -->
	</section>
	<!-- /.content -->
{% endblock %}
