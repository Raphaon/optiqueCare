{% extends 'base.html.twig' %}

{% block title %}
	Patients
{% endblock %}

{% block body %}
	<!-- Content Header (Page header) -->
	<section class="content-header">
		<div class="container-fluid">
			<div class="row mb-2">
				<div class="col-sm-6">
					<h1>Patients</h1>
				</div>
				<div class="col-sm-6">
					<ol class="breadcrumb float-sm-right">
						<li class="breadcrumb-item">
							<a href="{{ path('app_oc_dashboard') }}">Accueil</a>
						</li>
						<li class="breadcrumb-item active">Patients</li>
					</ol>
				</div>
			</div>
		</div>
		<!-- /.container-fluid -->
	</section>

	<!-- Main content -->
	<section class="content">
		<div class="container-fluid">
			<div class="row">
				<div class="col-12">
					<div class="card">
						<div class="card-header">
							<h3 class="card-title">Liste des patients</h3>
						</div>
						<!-- /.card-header -->
						<div class="card-body">
							<table id="example1" class="table table-bordered table-striped">
								<thead>
									<tr>
										<th>Matricule</th>
										<th>Noms</th>
										<th>Phone</th>
										<th>Email</th>
										<th>Profession</th>
										<th>Quartier</th>
										<th>Actions</th>
									</tr>
								</thead>
								<tbody>
									{% for oc_patient in oc_patients %}
										<tr>
											<td>{{ oc_patient.matricule }}</td>
											<td>{{ oc_patient.name }}</td>
											<td>{{ oc_patient.phone }}</td>
											<td>{{ oc_patient.email }}</td>
											<td>{{ oc_patient.profession }}</td>
											<td>{{ oc_patient.location }}</td>
											<td>
												<a class="btn btn-warning btn-sm" href="{{ path('app_oc_patients_show', {'id': oc_patient.id}) }}">
													<i class="fas fa-eye"></i>
												</a>
												<a class="btn btn-info btn-sm" href="{{ path('app_oc_patients_edit', {'id': oc_patient.id}) }}">
													<i class="fas fa-pencil-alt"></i>
												</a>
											</td>
										</tr>
									{% else %}
										<tr>
											<td colspan="5">Aucun éléments trouvés</td>
										</tr>
									{% endfor %}
								</tbody>
								<tfoot>
									<tr>
										<th>Matricule</th>
										<th>Noms</th>
										<th>Phone</th>
										<th>Email</th>
										<th>Profession</th>
										<th>Quartier</th>
										<th>Actions</th>
									</tr>
								</tfoot>
							</table>
						</div>
						<!-- /.card-body -->
					</div>
					<!-- /.card -->
					<a class="btn btn-primary float-right" href="{{ path('app_oc_patients_new') }}">
						<i class="fas fa-plus"></i>
						Ajouter patient
					</a>
				</div>
				<!-- /.col -->
			</div>
			<!-- /.row -->
		</div>
		<!-- /.container-fluid -->
	</section>
	<!-- /.content -->
{% endblock %}
