{% extends 'base.html.twig' %}

{% block title %}
	Examens
{% endblock %}

{% block body %}
	<!-- Content Header (Page header) -->
	<section class="content-header">
		<div class="container-fluid">
			<div class="row mb-2">
				<div class="col-sm-6">
					<h1>Examens</h1>
				</div>
				<div class="col-sm-6">
					<ol class="breadcrumb float-sm-right">
						<li class="breadcrumb-item">
							<a href="{{ path('app_oc_dashboard') }}">Accueil</a>
						</li>
						<li class="breadcrumb-item active">Examens</li>
					</ol>
				</div>
			</div>
		</div>
		<!-- /.container-fluid -->
	</section>

	<!-- Main content -->
	<section class="content">
		<div class="container-fluid">
			<div class="row">
				<div class="col-12">
					<div class="card">
						<div class="card-header">
							<h3 class="card-title">Examens</h3>
						</div>
						<!-- /.card-header -->
						<div class="card-body">
							<table id="example1" class="table table-bordered table-striped">
								<thead>
									<tr>
										<th>Ref</th>
										<th>Designation</th>
										<th>Code examen</th>
										<th>Prix</th>
										<th>Actions</th>
									</tr>
								</thead>
								<tbody>
									{% for oc_examen in oc_examens %}
										<tr>
											<td>{{ oc_examen.refExamen }}</td>
											<td>{{ oc_examen.designation }}</td>
											<td>{{ oc_examen.codeExamen }}</td>
											<td>{{ oc_examen.prixExamen }}</td>
											<td>
												<a class="btn btn-app bg-success" href="{{ path('app_oc_examens_show', {'id': oc_examen.id}) }}">
													<i class="fas fa-view"></i>Show
												</a>
												<a class="btn btn-app" href="{{ path('app_oc_examens_edit', {'id': oc_examen.id}) }}">
													<i class="fas fa-edit"></i>Edit
												</a>
											</td>
										</tr>
									{% else %}
										<tr>
											<td colspan="5">Aucun éléments trouvés</td>
										</tr>
									{% endfor %}
								</tbody>
								<tfoot>
									<tr>
										<th>Ref</th>
										<th>Designation</th>
										<th>Code examen</th>
										<th>Prix</th>
										<th>Actions</th>
									</tr>
								</tfoot>
							</table>
						</div>
						<!-- /.card-body -->
					</div>
					<!-- /.card -->
					<a class="btn btn-primary float-right" href="{{ path('app_oc_examens_new') }}">
						<i class="fas fa-plus"></i>
						Create new
					</a>
				</div>
				<!-- /.col -->
			</div>
			<!-- /.row -->
		</div>
		<!-- /.container-fluid -->
	</section>
	<!-- /.content -->
{% endblock %}
