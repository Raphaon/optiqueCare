{% extends 'base.html.twig' %}

{% block title %}
	Prescripteurs
{% endblock %}

{% block body %}
	<!-- Content Header (Page header) -->
	<section class="content-header">
		<div class="container-fluid">
			<div class="row mb-2">
				<div class="col-sm-6">
					<h1>Configurations</h1>
				</div>
				<div class="col-sm-6">
					<ol class="breadcrumb float-sm-right">
						<li class="breadcrumb-item">
							<a href="{{ path('app_oc_dashboard') }}">Accueil</a>
						</li>
						<li class="breadcrumb-item active">Prescriteurs</li>
					</ol>
				</div>
			</div>
		</div>
		<!-- /.container-fluid -->
	</section>

	<!-- Main content -->
	<section class="content">
		<div class="container-fluid">
			<div class="row">
				<div class="col-12">
					<div class="card">
						<div class="card-header">
							<h3 class="card-title">Liste des fonctions</h3>
						</div>
						<!-- /.card-header -->
						<div class="card-body">
							<table id="example1" class="table table-bordered table-striped">
								<thead>
									<tr>
										<th>CodePrescripteur</th>
										<th>Noms prenoms</th>
										<th>Date naissance</th>
										<th>Phone</th>
										<th>Date d'embauche</th>
										<th>Fonction</th>
										<th>Actions</th>
									</tr>
								</thead>
								<tbody>
									{% for oc_prescripteur in oc_prescripteurs %}
										<tr>
											<td>{{ oc_prescripteur.codePrescripteur }}</td>
											<td>
												{{ oc_prescripteur.nomPrescripteur }}
												{{ oc_prescripteur.prenomPrescripteur }}
											</td>
											<td>{{ oc_prescripteur.dateNaissPrescripteur ? oc_prescripteur.dateNaissPrescripteur|date('Y-m-d') : '' }}</td>
											<td>{{ oc_prescripteur.numTelPrescripteur }}</td>
											<td>{{ oc_prescripteur.dateEmbauche ? oc_prescripteur.dateEmbauche|date('Y-m-d') : '' }}</td>
											<td>{{ oc_prescripteur.fonctionPrescription.libelleFonction }}</td>
											<td>
												<a class="btn btn-warning btn-sm" href="{{ path('app_oc_prescripteurs_show', {'id': oc_prescripteur.id}) }}">
													<i class="fas fa-eye"></i>
												</a>
												<a class="btn btn-info btn-sm" href="{{ path('app_oc_prescripteurs_edit', {'id': oc_prescripteur.id}) }}">
													<i class="fas fa-pencil-alt"></i>
												</a>
											</td>
										</tr>
									{% else %}
										<tr>
											<td colspan="3">Aucun éléments trouvés</td>
										</tr>
									{% endfor %}
								</tbody>
								<tfoot>
									<tr>
										<th>Matricule	</th>
										<th>Noms prenoms</th>
										<th>Date naissance</th>
										<th>Phone</th>
										<th>Date d'embauche</th>
										<th>Fonction</th>
										<th>Actions</th>
									</tr>
								</tfoot>
							</table>
						</div>
						<!-- /.card-body -->
					</div>
					<!-- /.card -->
					<a class="btn btn-primary float-right" href="{{ path('app_oc_prescripteurs_new') }}">
						<i class="fas fa-plus"></i>
						Ajouter
					</a>
				</div>
				<!-- /.col -->
			</div>
			<!-- /.row -->
		</div>
		<!-- /.container-fluid -->
	</section>
	<!-- /.content -->
{% endblock %}
